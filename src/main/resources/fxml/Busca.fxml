<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.control.PropertySheet?>

<BorderPane maxWidth="980.0" style="-fx-border-color: #ccc;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="search.BuscaController">
   <center>
      <VBox fx:id="content" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="TOP_CENTER">
               <children>
                  <PropertySheet fx:id="filter" VBox.vgrow="ALWAYS" />
                  <Separator prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </Separator>
                  <Button maxWidth="1.7976931348623157E308" minWidth="-Infinity" mnemonicParsing="false" onAction="#buscar" text="Buscar">
                     <graphic>
                        <MaterialDesignIconView glyphName="MAGNIFY" size="16" />
                     </graphic>
                     <VBox.margin>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0">
               <HBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </HBox.margin>
            </Separator>
         </children>
      </HBox>
   </left>
   <bottom>
      <ToolBar minHeight="40.0" BorderPane.alignment="CENTER">
         <items>
            <Button fx:id="cancel" cancelButton="true" graphicTextGap="10.0" minWidth="100.0" mnemonicParsing="false" onAction="#back" style="-fx-background-color: #a00;" text="Voltar" textFill="WHITE">
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="KEYBOARD_BACKSPACE" size="20" />
               </graphic>
            </Button>
            <Pane HBox.hgrow="ALWAYS" />
         </items>
      </ToolBar>
   </bottom>
</BorderPane>
